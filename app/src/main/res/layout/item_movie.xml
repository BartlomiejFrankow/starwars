<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="obj"
                type="com.example.movies.api.entities.Movie" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcHomePost"
                style="@style/card_view"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_1sdp"
                app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRoot"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <!--        <ImageView-->
                <!--                android:id="@+id/ivMoviePicture"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="300dp"-->
                <!--                android:scaleType="centerCrop"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintTop_toTopOf="parent" />-->

                <!--        <ProgressBar-->
                <!--                android:id="@+id/pbMovie"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                app:layout_constraintTop_toTopOf="@+id/ivMoviePicture"-->
                <!--                app:layout_constraintBottom_toBottomOf="@+id/ivMoviePicture"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintEnd_toEndOf="@+id/ivMoviePicture"/>-->

                <TextView
                        android:id="@+id/tvMovieTitle"
                        style="@style/title"
                        android:text="@{obj.title}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="title" />

                <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_arrow_right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:id="@+id/tvMovieDirector"
                        style="@style/movies_item_text_view"
                        android:text="@{`Director: ` + obj.director}"
                        app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMovieTitle"
                        tools:text="Director" />

                <TextView
                        android:id="@+id/tvMovieProducer"
                        style="@style/movies_item_text_view"
                        android:text="@{`Producer: ` + obj.producer}"
                        app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMovieDirector"
                        tools:text="Producer" />

                <TextView
                        android:id="@+id/tvMovieReleaseDate"
                        style="@style/movies_item_text_view"
                        android:text="@{`Release date: ` + obj.release_date}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMovieProducer"
                        tools:text="Release date" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>